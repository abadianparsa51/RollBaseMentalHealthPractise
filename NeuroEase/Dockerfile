# Build stage
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

# Copy everything
COPY . .

# ðŸ‘‡ Ø§ÛŒÙ†Ø¬Ø§ Ø¨Ø§ÛŒØ¯ Ù…Ø³ÛŒØ± csproj Ù¾Ø±ÙˆÚ˜Ù‡ API Ø±Ø§ Ø¯Ù‚ÛŒÙ‚ Ú©Ù†ÛŒ
# Ù…Ø«Ø§Ù„: NeuroEase/NeuroEase.Api/NeuroEase.Api.csproj
RUN dotnet restore "PATH_TO_API_CSPROJ"

RUN dotnet publish "PATH_TO_API_CSPROJ" -c Release -o /app/publish --no-restore

# Runtime stage
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime
WORKDIR /app
EXPOSE 8080
ENV ASPNETCORE_URLS=http://+:8080

COPY --from=build /app/publish .
ENTRYPOINT ["dotnet", "YOUR_API_DLL_NAME.dll"]
